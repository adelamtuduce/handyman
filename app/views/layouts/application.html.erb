<!DOCTYPE html>
<html>
  <head>
    <title>Handyman</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyAdshNg7qSEDkMfKQcvqZmwO8SA-M2gQaQ"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">HandyMan</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav float-right">
          <% if user_signed_in? && !current_user.blank? %>   
            <li class="nav-item col-auto">
              <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col"></div>
        <div class='col' style="margin-top: 50px;">
          <% if current_user %>
            <div style='width: 920px;'>
              <div id="map" style='width: 920px; height: 500px;'></div>
            </div>
          <% else %>
            <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-lg btn-social btn-google' do %>
              <i class="fa fa-google"></i> Sign in with Google
            <% end %>
            </br>
            </br>
            </br>
            <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-lg btn-social btn-facebook' do %>
              <i class="fa fa-facebook"></i> Sign in with Facebook
            <% end %>
          <% end %>
        </div>
        <div class="col"></div>
      </div>
    </div>

    
  </body>
</html>
<script>
window.onload = function() {
  geoFindMe();
}
function geoFindMe() {

  if (!navigator.geolocation){
    console.log("ddddd")
    return;
  }

  function success(position) {
    var latitude  = position.coords.latitude;
    var longitude = position.coords.longitude;

    handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": latitude,
      "lng": longitude,
      "picture": {
        "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
        "width":  32,
        "height": 32
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

  }

  function error() {
  }


  navigator.geolocation.getCurrentPosition(success, error);
}
</script>

